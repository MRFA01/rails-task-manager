<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task)%>,
      <%= link_to "Delete",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>

  <% end %>
</ul>

<h6>
  <%= link_to "Add new task", new_task_path%>
</h6>
